
@{
    ViewData["Title"] = "BusinessToCustomers";
    @model Application.BusinessToCustomers.Queries.BusinessToCustomerListModel
}
<style>
    .mainTableBlock {
        min-height: 100px;
        max-height: 600px;
        width: 100%;
    }

    .gridBlock {
        min-height: 100px;
        max-height: 500px;
        overflow-y: auto;
        overflow-x: auto;
        width: 100%;
    }

    .table-fixed tbody {
        height: 200px;
        overflow-y: auto;
        width: 100%;
    }

    .table-fixed thead,
    .table-fixed tbody,
    .table-fixed tr,
    .table-fixed td,
    .table-fixed th {
        display: flex;
    }

        .table-fixed tr:after {
            content: "";
            display: block;
            visibility: hidden;
            clear: both;
        }

        .table-fixed tbody td,
        .table-fixed thead > tr > th {
            float: left;
        }

    .table > thead > tr > th,
    .table > thead > tr > td {
        font-size: .9em;
        font-weight: 400;
        border-bottom: 0;
        letter-spacing: 1px;
        vertical-align: top;
        padding: 8px;
        background: #51596a;
        text-transform: uppercase;
        color: #ffffff;
    }

    .card-header {
        background-color: darkseagreen;
    }

    .card-header {
        background-color: #119292;
        cursor: pointer;
    }

    .filterText {
        color: whitesmoke;
        background-color: #119292;
    }

    #middle {
        height: 30px;
        width: 100%;
    }
</style>

<h2>BusinessToCustomers</h2>

<div class="mainTableBlock">
    <div>
        <div class="accordion" id="accordionExample">

            <div class="card">
                <div class="card-header" id="headingThree" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    <button class="btn collapsed filterText" type="button">
                        Filter Option
                    </button>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="form-group">
                            <p>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <div>Country</div>
                                        <div class="sltb2cCountry">
                                            <select asp-for="Filter.CountryId"
                                                    class=form-control multiple id="B2CFilterCountryId" placeholder="Please select"
                                                    asp-items="@Model.Filter.Countries"></select>
                                        </div>
                                        <div>City</div>
                                        <div class="sltb2cCity">
                                            <select asp-for="Filter.CityId"
                                                    class=form-control multiple id="B2CFilterCityId" placeholder="Please select"
                                                    asp-items="@Model.Filter.Cities"></select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div>State</div>
                                        <div class="sltb2cState">
                                            <select asp-for="Filter.StateId"
                                                    class=form-control multiple id="B2CFilterStateId" placeholder="Please select"
                                                    asp-items="@Model.Filter.States">
                                            </select>
                                        </div>
                                        <div>Area</div>
                                        <div class="sltb2cArea">
                                            <select asp-for="Filter.AreaId"
                                                    class=form-control multiple id="B2CFilterAreaId" placeholder="Please select"
                                                    asp-items="@Model.Filter.Area">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </p>
                        </div>
                        <div class="form-group">
                            <div class="form-group" style="text-align:center; margin-top:20px;margin-bottom:20px;">
                                <input type="button" class="btn" value="Clear" />
                                <input type="button" class="btn btn-primary" value="Apply" id="btnB2CFilterApply" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="middle"></div>
    <div class="gridBlock">
        <!-- Grid-->
        <table id="tblB2C">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>DOB</th>
                    <th>Qualification</th>
                    <th>Experience</th>
                    <th>Employer</th>
                    <th>Key_Skills</th>
                    <th>Location</th>
                    <th>Roles</th>
                    <th>Industry</th>
                    <th>Address</th>
                    <th>Address_2</th>
                    <th>Email</th>
                    <th>Phone_New</th>
                    <th>Mobile_New</th>
                    <th>Mobile_2</th>
                    <th>Annual_Salary</th>
                    <th>Pincode</th>
                    <th>Area</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Country</th>
                    <th>Network</th>
                    <th>Gender</th>
                    <th>Caste</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                    foreach (var item in Model.BusinessToCustomers.ToList())
                    {
                        i = i + 1;
                        <tr>
                            <td>@i</td>
                            <td>@item.Name</td>
                            <td>@item.Dob</td>
                            <td>@item.Qualification</td>
                            <td>@item.Experience</td>
                            <td>@item.Employer</td>
                            <td>@item.KeySkills</td>
                            <td>@item.Location</td>
                            <td>@item.Roles</td>
                            <td>@item.Industry</td>
                            <td>@item.Address</td>
                            <td>@item.Address2</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNew</td>
                            <td>@item.MobileNew</td>
                            <td>@item.Mobile2</td>
                            <td>@item.AnnualSalary</td>
                            <td>@item.Pincode</td>
                            <td>@item.Area</td>
                            <td>@item.City</td>
                            <td>@item.State</td>
                            <td>@item.Country</td>
                            <td>@item.Network</td>
                            <td>@item.Gender</td>
                            <td>@item.Caste</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>