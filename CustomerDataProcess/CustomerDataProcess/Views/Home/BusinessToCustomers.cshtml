
@{
    ViewData["Title"] = "BusinessToCustomers";
    @model Application.BusinessToCustomers.Queries.BusinessToCustomerListModel
}

<style>
    .btn-space {
        margin-right: 5%;
    }

    .row-space {
        margin-top: 3%;
    }

    .badge-primary {
        color: #fff;
        background-color: #007bff;
    }

    .dashBoard {
        max-height: 200px;
        overflow-y: scroll;
        display: none;
    }

    .caption {
        font-size: 100%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
    }

    .dashboardHeader {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
<h2>BusinessToCustomers</h2>

<div class="container">
    <form asp-controller="Home" asp-action="CustomerData" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="exampleInputPassword1">Country</label>
                    <div class="sltCustomerFilterCity">
                        <select asp-for="Filter.CountryId" id="b2cCuntryId"
                                class=form-control multiple placeholder="Please select"
                                asp-items="@Model.Filter.Countries"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">City</label>
                    <div class="sltCustomerFilterCity">
                        <select asp-for="Filter.CityId" id="b2cCityId"
                                class=form-control multiple placeholder="Please select"
                                asp-items="@Model.Filter.Cities"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Roles</label>
                    <div class="sltCustomerFilterCity">
                        <select asp-for="Filter.RoleId" id="b2cRoleId"
                                class=form-control multiple placeholder="Please select"
                                asp-items="@Model.Filter.Roles"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Age</label>
                    <div class="sltCustomerFilterCity">
                        <select asp-for="Filter.AgeId" id="b2cAgeId"
                                class=form-control multiple placeholder="Please select"
                                asp-items="@Model.Filter.Ages"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Tags</label>
                    <input type="hidden" id="hdnB2CTags" value="@Model.Filter.Tags" />
                    <input type="text" class="form-control" id="b2ctags" placeholder="Search Tags" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="exampleInputPassword1">State</label>
                    <div class="sltCustomerFilterCity">
                        <select asp-for="Filter.StateId" id="b2cStateId"
                                class=form-control multiple placeholder="Please select"
                                asp-items="@Model.Filter.States"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Area</label>
                    <div class="sltCustomerFilterCity">
                        <select asp-for="Filter.AreaId" id="b2cAreaId"
                                class=form-control multiple placeholder="Please select"
                                asp-items="@Model.Filter.Area"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Salary</label>
                    <div class="sltCustomerFilterCity">
                        <select asp-for="Filter.SalaryId" id="b2cSalaryId"
                                class=form-control multiple placeholder="Please select"
                                asp-items="@Model.Filter.Salaries"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Experience</label>
                    <div class="sltCustomerFilterCity">
                        <select asp-for="Filter.ExpercinceId" id="b2cExpercinceId"
                                class=form-control multiple placeholder="Please select"
                                asp-items="@Model.Filter.Expercince"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12" style="text-align:center;">
            <button type="button" class="btn btn-primary btn-space">Cancel</button>
            <button type="button" id="btnBusinessToCustomerSearch" class="btn btn-success btn-space">Search</button>
        </div>
    </form>
    <div class="row row-space">
        <div class="col-xs-6 col-md-8">
            <div class="card" style="width: 90%; height:30%;">
                <div class="card-body">
                    <div class="row dashboardHeader">
                        <div class="col-6 col-md-4" " style="text-align:center">
                            <h4 class="card-title">Customer Data</h4>
                        </div>
                        <div class="col-6 col-md-4" " style="text-align:center">
                            <h4 class="card-title">Total: <span id="spnb2cTotal"></span></h4>
                        </div>
                        <div class="col-6 col-md-4" " style="text-align:center">
                            <h4 class="card-title">Search: <span id="spnb2cSearchTotal"></span></h4>
                        </div>
                    </div>
                    <p class="card-text">
                        <div id="dashboardb2cBlock" class="dashBoard">
                            <ul class="list-group" id="dashBoardb2cItem"></ul>
                        </div>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-xs-6 col-md-4">

            <div class="btn-group">

                <div class="btn-group">
                    <input type="hidden" id="downloadb2cLink" />
                    <button type="button" class="btn btn-primary" id="btnb2cDownloadExport">
                        Download(Excel) <span class="caret"></span>
                    </button>
                    <button type="button" class="btn btn-primary" id="btnb2cCSVDownloadExport">
                        Download(CSV) <span class="caret"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
